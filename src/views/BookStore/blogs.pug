    .blogs-slider.swiper 
        .wrapper.swiper-wrapper 
            +BlogBox({src:"../assets/BookStore/blog-1.jpg", title:"blog title 01"})
            +BlogBox({src:"../assets/BookStore/blog-2.jpg", title:"blog title 02"})
            +BlogBox({src:"../assets/BookStore/blog-3.jpg", title:"blog title 03"})
            +BlogBox({src:"../assets/BookStore/blog-4.jpg", title:"blog title 04"})
            +BlogBox({src:"../assets/BookStore/blog-5.jpg", title:"blog title 05"})