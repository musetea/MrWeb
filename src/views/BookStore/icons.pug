mixin IconBox(i) 
    .icons 
        i(class=i.icon)
        .content 
            h3= i.title 
            p- i.desc 

section#icons-container 
    +IconBox({icon:"fas fa-plane", title:"free shipping", desc:"order over $100"})
    +IconBox({icon:"fas fa-lock", title:"secure payment", desc:"100 secure payment"})
    +IconBox({icon:"fas fa-redo-alt", title:"easy returns", desc:"10 days returns"})
    +IconBox({icon:"fas fa-headset", title:"24/7 support", desc:"call us anytimes"})
