         .box-container 
            +MenuItemBox({src:"../assets/Restaurant/menu-1.jpg", title:"delicious food", price:"$12.99"})
            +MenuItemBox({src:"../assets/Restaurant/menu-2.jpg", title:"delicious food", price:"$12.99"})
            +MenuItemBox({src:"../assets/Restaurant/menu-3.jpg", title:"delicious food", price:"$12.99"})
