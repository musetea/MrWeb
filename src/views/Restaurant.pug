                  input(type="datetime-local")
            .inputBox 
               .input 
                  span your address
                  textarea(name="", cols="30", rows="10", placehodler="enter your address") 
               .input 
                  span your message
                  textarea(name="", cols="30", rows="10", placehodler="enter your message") 
            
            input.btn(type="submit", value="order now")

