doctype html
html(lang="ko")
   head
      meta(charset="UTF-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      title Restaurant
      link(rel="stylesheet", href="../css/Restaurant.css")
      link(rel="stylesheet", href="https://unpkg.com/swiper@7/swiper-bundle.min.css")
      script(src="../js/Restaurant.js" defer) 
      script(src="https://unpkg.com/swiper@7/swiper-bundle.min.js" defer)

   body 
      mixin Heading(i)
         h3.sub-heading=i.sub 
         h1.heading=i.title 

      mixin Stars(i)
         .stars
            each star in i.full 
               i(class=star)
            each half in i.half 
               i(class=half)
      mixin SearchForm()
         form#search-form(action="")
            input#search-box(type="search", placehodler="search here...")
            label.fas.fa-search(for="search-box")   
            i.fas.fa-times#close 
      header.header 
         a.logo(href="#") 
            i.fas.fa-utensils
            | resto 
         nav.navbar 
            a.active(href="#home")  home
            a(href="#dishes") dishes
            a(href="#about") about
            a(href="#menu") menu
            a(href="#review") review
            a(href="#order") order
         .icons 
            i.fas.fa-bars#menu-bars 
            i.fas.fa-search#search-icon 
            a.fas.fa-heart(href="#") 
            a.fas.fa-shopping-cart(href="#") 
      
      +SearchForm()

      //- HOME SECTION
      mixin SlideBox(i)
         .slide.swiper-slide 
            .content 
               span=i.caption 
               h3=i.title
               p Lorem ipsum dolor sit, amet consectetur adipisicing elit. Nesciunt quae exercitationem sequi quas, reiciendis molestiae.
               a.btn(href="") order now
            .image 
               img(src=i.src, alt="")

      section#home.home 
         .home-slider.swiper-container 
            .wrapper.swiper-wrapper
               +SlideBox({src:"../assets/Restaurant/home-img-1.png", caption:"our special dish", title:"spicy noodles" })
               +SlideBox({src:"../assets/Restaurant/home-img-2.png", caption:"our special dish", title:"fried chicken" })
               +SlideBox({src:"../assets/Restaurant/home-img-3.png", caption:"our special dish", title:"hot pizza" })
            
            .swiper-pagination

      //- DISHES SECTION
      mixin DishesItem(i)
         .box
            .icons 
               a.fas.fa-heart(href="#") 
               a.fas.fa-eye(href="#")
            img(src=i.src, alt="")
            h3= i.title 
            +Stars({full:["fas fa-star","fas fa-star","fas fa-star","fas fa-star"],
               half:["fas fa-star-half-alt"]
               })
            span.price=i.price 
            a.bnt(href="#") add to cart 

      section#dishes.dishes 
         h3.sub-heading our dishes 
         h1.heading popular dishes 

         .box-container 
            +DishesItem({src:"../assets/Restaurant/dish-1.png", title:"", price:"$15.99" })

      //- 어바우트 섹션 
      mixin IconBox(i)
         .icons
            i(class=i.icon)
            span= i.title 

      section#about.about 
         +Heading({sub:"about us", title:"why choose us?"})
      
         .row 
            .image 
               img(src="../assets/Restaurant/about-img.png", alt="")
            .content 
               h3 best food in the country 
