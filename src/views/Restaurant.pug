            +MenuItemBox({src:"../assets/Restaurant/menu-9.jpg", title:"delicious food", price:"$12.99"})

      //- 리뷰섹션
      mixin ReviewBox(i)
         .slide.swiper-slide 
            i.mark.fas.fa-quote-right
            .user 
               img(src=i.src, alt="")
               .user-info 
                  h3= i.name 
                  +Stars({full:["fas fa-star","fas fa-star","fas fa-star"], half:["fas fa-star-half-alt"]})
            p Lorem ipsum dolor sit amet consectetur adipisicing elit. Autem dolores rerum labore, placeat mollitia quae sit aliquam aut delectus odit. Vero quasi aperiam commodi veritatis quam officiis officia alias repellat.

      
      section#review.review 
         +Heading({sub:"customer's review", title:"what they say"})

         //- 리뷰슬라이더 
         .review-slider.swiper-container 
            .wrapper.swiper-wrapper  
               +ReviewBox({src:"../assets/Restaurant/pic-1.png", name:"Jhone Doe", })
               +ReviewBox({src:"../assets/Restaurant/pic-2.png", name:"Emma Hill", })
               +ReviewBox({src:"../assets/Restaurant/pic-3.png", name:"홍길동", })
