               p Lorem ipsum, dolor sit amet consectetur adipisicing elit. Iure possimus atque at eos consequuntur quis, eum praesentium? Quisquam, dolores eos?

               .icons-container 
                  +IconBox({icon:"fas fa-shipping-fast", title:"free delivery"})
                  +IconBox({icon:"fas fa-dollar-sign", title:"easy payments"})
                  +IconBox({icon:"fas fa-headset", title:"services"})
               a.btn(href="") learn more 

      //- 메뉴섹션
      mixin MenuItemBox(i)
         .box 
            .image 
               img(src=i.src, alt="")
               a.fas.fa-heart(href="#")
            .content 
               +Stars({full:["fas fa-star","fas fa-star","fas fa-star","fas fa-star"],
                  half:["fas fa-star-half-alt"]})
               h3= i.title 
               p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Totam beatae consequuntur debitis id laborum exercitationem?
               a.btn(href="#") add to cart 
