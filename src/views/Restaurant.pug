               .input 
                  span your name 
                  input(type="text" , placehodler="enter your name") 
               .input 
                  span your number
                  input(type="number" , placehodler="enter your number") 
            .inputBox 
               .input 
                  span your order
                  input(type="text" , placehodler="enter your food") 
               .input 
                  span your number
                  input(type="text" , placehodler="extra with food") 
            .inputBox 
               .input 
                  span how musch
                  input(type="number" , placehodler="how many orders") 
               .input 
