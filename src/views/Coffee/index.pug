html(lang="ko")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Coffee in the Morning
        link(rel="stylesheet", href="../css/Coffee.css")
        script(src="../js/Coffee.js", defer) 
    body
        header.header 
            //- 로고
            a.logo(href="#") 
                img(src=`${images[0]}`, alt="")
            //- 네비게이션
            nav.navbar 
                each navi in navigations 
                    a(href=`#${navi}`)= navi 
            //- 아이콘
            .icons 
                .fas.fa-search#search-btn 
                .fas.fa-shopping-cart#cart-btn 
                .fas.fa-bars#menu-btn 

            //- 검색창
            include ./searchForm 
        //- 홈영역
        include ./home  
        
